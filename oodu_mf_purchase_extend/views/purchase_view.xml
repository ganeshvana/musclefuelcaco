<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_inherit" model="ir.ui.view">
        <field name="name">purchase.order.inherit.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group/field[@name='company_id']" position="after">
                <field name="category_id" widget="many2many_tags" placeholder="Tags..."/>
            </xpath>
     
        </field>
    </record>


    <record id="view_purchase_order_inherit_tree" model="ir.ui.view">
        <field name="name">purchase.order.inherit.tree.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="category_id" widget="many2many_tags"/>
            </field>
        </field>
    </record>
    
  
</odoo>
