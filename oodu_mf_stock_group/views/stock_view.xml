<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.inherit.form.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_assign']" position="attributes">
                <attribute name="groups">oodu_mf_stock_group.group_availability_button</attribute>
            </xpath>
            
            <xpath expr="//button[@name='button_validate'][hasclass('oe_highlight')]" position="attributes">
                <attribute name="groups">oodu_mf_stock_group.group_validate_button</attribute>
            </xpath>
            <xpath expr="//button[@name='button_validate'][hasclass('o_btn_validate')]" position="attributes">
                <attribute name="groups">oodu_mf_stock_group.group_validate_button</attribute>
            </xpath>
        </field>
    </record>
    
  
</odoo>
